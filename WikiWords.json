{
    "name": "WikiWords",
    "style": "Light",
    "author": {
        "name": "NotePlan",
        "email": "hello@noteplan.co"
    },
    
    "editor": {
        "backgroundColor": "#FAFAFA",
        "altBackgroundColor": "#F2F2F2",
        "tintColor": "#38B6B3",
        "tintColor2": "#FF5162",
        "textColor":"#333333",
        "toolbarBackgroundColor": "#DCDCDC",
        "toolbarIconColor": "#666666",
        "menuItemColor": "#666666",
        "shouldOverwriteFont": true
    },
    
    "styles": {      
    "wikiword-link": {
        "regex": "(?<!# )([A-Z]\\w+[A-Z]\\w+)",
        "matchPosition": 1,
        "urlPosition": 1,
        "type": "noteLink",
        "prefix": "noteplan://x-callback-url/openNote?noteTitle=",
    },
        
        "body": {
            "font": "AvenirNext-Regular",
            "size": 16,
            "color": "#333333",
        },

        "title1": {
            "color": "#559BCF",
            "size": 28
        },
        
        "title2": {
            "color": "#559BCF",
            "size": 24
        },
        
        "title3": {
            "color": "#559BCF",
            "size": 20
        },
        
        "title-mark1": {
            "color": "#45559BCF",
            "size": 28,
            "font": "AvenirNext-DemiBold"
        },
        
        "title-mark2": {
           "color": "#45559BCF",
           "size": 24,
           "font": "AvenirNext-DemiBold"
        },
        
        "title-mark3": {
           "color": "#45559BCF",
           "size": 20,
           "font": "AvenirNext-DemiBold"
        },
        
        "bold": {
            "font": "AvenirNext-Bold"
        },
        
        "bold-left-mark": {
            "color": "#45333333"
        },
        
        "bold-right-mark": {
            "color": "#45333333"
        },
        
        "italic": {
            "font": "AvenirNext-Italic"
        },
        
        "italic-left-mark": {
            "color": "#45333333"
        },
        
        "italic-right-mark": {
            "color": "#45333333"
        },
        
        "boldItalic": {
            "font": "AvenirNext-BoldItalic"
        },
        
        "boldItalic-left-mark": {
            "color": "#45333333"
        },
        
        "boldItalic-right-mark": {
            "color": "#45333333"
        },
        
        "code": {
            "font": "Menlo-Regular",
            "color": "#FF5162",
            "size": 15
        },
    
        "code-left-backtick": {
            "color": "#66FF5162"
        },
        
        "code-right-backtick": {
            "color": "#66FF5162"
        },
        
        "checked": {
            "color": "#66333333",
            "headIndent": 33
        },
        
        "todo": {
            "font": "noteplanstate",
            "color": "#38B6B3",
            "headIndent": 33,
            "size": 16
        },
        
        "checked-todo-characters": {
            "font": "noteplanstate",
            "headIndent": 33,
            "size": 16
        },
        
        "special-char": {
            "font": "Menlo-Regular"
        },
        
        "tabbed": {
            "headIndent": 43
        },
        
        "quote-mark": {
            "color": "#80FF5162",
            "font": "noteplanstate",
            "headIndent": 33,
            "size": 16
        },
        
        "quote-content": {
            "color": "#333333",
            "type": "italic",
            "headIndent": 33
        },
        
